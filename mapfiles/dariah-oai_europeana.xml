<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for DublinCore (and DC Europeana ??) metadata from Dariah. -->
  <namespaces>
    <namespace ns="r" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="dc" uri="http://purl.org/dc/elements/1.1/"/>
    <namespace ns="dcterms" uri="http://purl.org/dc/terms/"/>
    <namespace ns="europeana" uri="http://www.europeana.eu/schemas/ese/"/>
  </namespaces>
  <mappings>
    <!-- General fields shown above the field/value tables -->
    <field name="title">
      <xpath>//dc:title/text()</xpath>
    </field>
    <field name="notes">
      <xpath>string-join(distinct-values(//dc:description/text()), ' | ')</xpath>
    </field>
    <field name="tags">
      <xpath>replace(replace(//dc:type/text(),"info:",""),"[()/]"," ")</xpath>
    </field>
    <!-- Central facets, shown in an extra table 'Main fields' (not implemented yet : all fields in table 'Additional info') -->
    <field name="url">
      <xpath>//dc:identifier/text()</xpath>
    </field>
    <field name="Discipline">
      <!-- No dc:subject available !!! <xpath>//dc:subject/text()</xpath> -->
      <string>Human History</string> <!-- most are History, but some may be as well Arts or similar ... check dc:publisher !!-->
    </field>
    <field name="author">
      <xpath>string-join(distinct-values(//dc:creator/text()), '; ')</xpath>
      <xpath>string-join(distinct-values(//dc:contributor/text()), '; ')</xpath>
    </field>
    <!-- All other visible fields, shown in table 'Additional info' -->
    <field name="PublicationYear">
      <xpath>//dc:date[1]/text()</xpath>
    </field>
    <field name="PublicationTimestamp">
      <xpath>if (matches(//dc:date[1]/text(), '[12]\d{3}.*')) then if(contains(//dc:date[1]/text(), '-')) then concat(substring-before(//dc:date[1]/text(), '-'),'-07-01T11:59:59Z') else concat(//dc:date[1]/text(),'-07-01T11:59:59Z') else '' </xpath>
      <xpath>if (matches(//dc:date[1]/text(), '.*\d{1}\. Jh\.v\.Chr\..*')) then concat('-',substring-before(//dc:date[1]/text(), '\. Jh'),'000-07-01T11:59:59Z') else //dc:date[1]/text() </xpath>
    </field>
    <field name="Language">
      <xpath>//dc:language/text()</xpath>
    </field>
    <field name="Origin">
      <xpath>//europeana:dataProvider/text()</xpath>
      <xpath>//europeana:provider/text()</xpath>
      <xpath>//dc:source[1]/text()</xpath>
      <xpath>//dc:publisher/text()</xpath>
    </field>
    <field name="Format">
      <xpath>//europeana:type/text()</xpath>
    </field>
    <field name="GeograhicDescription">
      <xpath>//dcterms:spatial/text()</xpath>
      <xpath>//dc:coverage/text()</xpath>
    </field>
    <field name="Rights">
      <xpath>//dc:rights/text()</xpath>
      <xpath>//europeana:rights/text()</xpath>
    </field>
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//r:header/r:identifier/text()</xpath>
    </field>
    <field name="oai_set">
      <xpath>//r:header/r:setSpec/text()</xpath>
    </field>
    <field name="MapperVersion">
      <string expand="true">${mapper_version}</string>
    </field>
  </mappings>
</mapping-table>
