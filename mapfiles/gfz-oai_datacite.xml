<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for GFZ DataCite metadata -->
  <namespaces>
    <namespace ns="h" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="r" uri="http://datacite.org/schema/kernel-3"/>
  </namespaces>
  <mappings>
    <!-- General Information -->
    <field name="title">
      <xpath>//r:titles/r:title/text()</xpath>
    </field>
    <field name="notes">
      <xpath>//r:descriptions/r:description/text()</xpath>
    </field>
    <field name="tags">
      <xpath>//r:subjectScheme</xpath>
    </field>
    <!-- Access data -->
   <field name="url">
       <xpath>//r:resource/r:identifier/text()</xpath>
   </field>
   <field name="Checksum">
       <xpath></xpath> 
   </field>
    <field name="Rights">
      <xpath>//r:rights/text()</xpath>
    </field>
   <!-- Provenance data -->
    <field name="Discipline">
      <string>Earth Sciences</string>
    </field>
    <field name="author">
      <xpath>//r:creatorName</xpath>
    </field>
    <field name="Publisher">
      <xpath>//r:publisher/text()</xpath>
    </field>
    <field name="PublicationYear">
      <xpath>//r:publicationYear/text()</xpath>
    </field>
   <!-- Formal data -->
    <field name="Language">
      <xpath>//r:language/text()</xpath>
    </field>
    <field name="SpatialCoverage">
      <xpath>//r:geoLocationBox</xpath>
    </field>
    <field name="TemporalCoverage">
      <xpath>//r:dates/r:date</xpath>
    </field>
    <field name="Format">
      <xpath>//r:format/text()</xpath>
    </field>
    <!-- Additional Information -->
    <field name="Contact">
      <xpath>//r:contributorName/text()</xpath>
    </field>
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_set">
      <xpath>//h:header/h:setSpec/text()</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//h:header/h:identifier/text()</xpath>
    </field>
  </mappings>
</mapping-table>
