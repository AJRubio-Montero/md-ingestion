<?xml version="1.0" encoding="UTF-8" ?>
<mapping-table>
  <!-- Mappings for GFZ DataCite metadata -->
  <namespaces>
    <namespace ns="h" uri="http://www.openarchives.org/OAI/2.0/"/>
    <namespace ns="datacite" uri="http://datacite.org/schema/kernel-2.2/"/>
  </namespaces>
  <mappings>
    <!-- General Information -->
    <field name="title">
      <xpath>//datacite:title/text()</xpath>
    </field>
    <field name="notes">
      <xpath>//datacite:description/text()/</xpath>
    </field>
    <field name="tags">
      <xpath>//datacite:subject/text()</xpath>
    </field>
    <!-- Access data -->
    <field name="url">
      <xpath>//datacite:identifier/text()</xpath>
    </field>
    <field name="Rights">
      <xpath>//datacite:rights/text()</xpath>
    </field>
   <!-- Provenance data -->
    <field name="Discipline">
      <xpath>//datacite:subject/text()</xpath>
    </field>
    <field name="author">
      <xpath>//datacite:creatorName/text()</xpath>
    </field>
    <field name="Publisher">
      <xpath>//datacite:publisher/text()</xpath>
    </field>
    <field name="PublicationYear">
      <xpath>//datacite:publicationYear/text()</xpath>
    </field>
   <!-- Formal data -->
    <field name="Language">
      <xpath>//datacite:language/text()</xpath>
    </field>
    <field name="SpatialCoverage">
      <xpath>//datacite:description/text()</xpath>
    </field>
    <field name="TemporalCoverage">
      <xpath>//datacite:description/text()</xpath>
    </field>
    <field name="Format">
      <xpath>//datacite:format/text()</xpath>
    </field>
    <!-- Additional Information -->
    <field name="Contact">
      <xpath>//datacite:contributerName/text()</xpath>
    </field>
    <!-- Hidden fields, only shown to logged in CKAN users -->
    <field name="fulltext">
      <xpath>normalize-space(string(/))</xpath>
    </field>
    <field name="oai_identifier">
      <xpath>//h:header/h:identifier/text()</xpath>
    </field>
    <field name="oai_set">
      <xpath>//h:header/h:setSpec/text()</xpath>
    </field>
  </mappings>
</mapping-table>
